<!DOCTYPE html>
<html>
    <head>
	<meta charset="utf-8">
        <title>API карт 2ГИС</title>
        <script src="http://maps.api.2gis.ru/2.0/loader.js?pkg=full"></script>
        <script type="text/javascript">
            var map;

            DG.then(function () {
                map = DG.map('map', {
                    center: [54.98, 82.89],
                    zoom: 13
                });

                DG.marker([54.98, 82.89]).addTo(map)
            });
        </script>
    </head>
    <body>
        <div id="map" style="width:100%; min-height: 400px;"></div>  
    </body>
</html>

